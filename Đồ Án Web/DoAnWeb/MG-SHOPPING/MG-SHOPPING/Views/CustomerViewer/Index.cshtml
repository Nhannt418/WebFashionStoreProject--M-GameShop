@{
    ViewBag.Title = "Thông tin khách hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model List<MG_SHOPPING.Models.Detail.ModelCart>

<div class="container">
    <div class="row">
        <center>
            <h1>Thông tin cá nhân của khách hàng:'@ViewBag.user.nameCustomer'</h1>
            <table border="1" style="border:1px black dotted;">
                <thead>
                    <tr>
                        <td>Image</td>
                        <td>Name</td>
                        <td>Code</td>
                        <td>Price</td>
                        <td>Quality</td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var i in Model)
                    { 
                        <tr>
                            <td><img src="@i.image" alt="" /></td>
                            <td><a href="#" >@i.name</a></td>
                            <td>@i.code</td>
                            <td>@i.price</td>
                            <td>@i.quarity</td>
                        </tr>   
                    }
                </tbody>
            </table>

        </center>
        
    </div>
</div>