@model List<MG_Model.EF.MenuManager>  
<h1 class="text-center">Danh mục hàng</h1>
    @foreach (var j in Model)
    { 
        
       var templist = new List<MG_Model.EF.Products>();
                     foreach (var i in ViewBag.Type)
                     {
                         if (i.type == j.id) { templist.Add(i); }
                         else if (i.type == j.id + 1) { break; }
                     }     
        <div class="row line" id="@j.link">
         <div class="col-md-2 cus">
            <div class="test_title">
                <h3 class="text-center">@j.name</h3>
                <div class="col-md-12">
                    <div class="product-image-wrapper">
				    <div class="single-products">
                        <img src="@templist[0].image_large"alt="@templist[0].alt" align="middle"/>
                       </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-10">
             <div class="test_body">
                 <div class="col-md-3">
                     <div class="product-image-wrapper">
							<div class="single-products">
                     <img src="@templist[1].image_large" alt="@templist[1].alt" align="middle"/>
                                </div>
                         </div>
                 </div>
                 <div class="col-md-9">
                     
                     @for (var i = 2; i < templist.Count; i++)
                     { 
                         <div class="col-md-4 cus">
                             <div class="product-image-wrapper">
							    <div class="single-products">
							     <div class="productinfo text-center">
                                  <img src="@templist[i].image_large" alt="@templist[i].alt" width="140px" height="175px" align="middle"  />
                                     <a href="chi-tiet/@templist[i].metaNameProduct">
                                         <h6 class="text-center"><strong>@templist[i].nameProduct</strong></h6></a>
                                    </div>
                                </div>
                             </div>
                     </div>
                     }
                 </div>
            </div>
        </div>
            <a href="/Danh-muc/@j.metaName" class="pull-right" style="color:red;">&raquo;Xem tất cả</a>
            </div>
    }
        
       