@{
    ViewBag.Title = "Giỏ hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model IList<MG_SHOPPING.Models.Detail.ModelCart>
        @{Html.RenderAction("_getBanner", "Menu");}
		<!--phan session của main-->
	<section>
		<div class="container">
			<div class="row">
				<div class="col-sm-3">
					<div class="left-sidebar">
						@{Html.RenderAction("_getLeftMenu", "Menu");}
						<div class="brands_products"><!--brands_products-->
							<div class="brands-name">
								<div class="menu-container">
      
									  <div class="top_nav">
										<h2 class="text-center">Hàng Hiệu</h2>
									  </div>
								    @{Html.RenderAction("_getBrands", "Menu");}
								</div>
							</div>
						</div><!--/brands_products-->
						
						
					</div>	
				</div>
				
				<div class="col-sm-9 padding-right">
					<section id="cart_items">
						<h2 class="text-center"><span>GIỎ HÀNG</span></h2>
							<div class="table-responsive cart_info">
								<table class="table table-condensed">
									<thead>
										<tr class="cart_menu">
											<td class="image">Hình ảnh</td>
											<td class="description">Mô tả</td>
											<td class="price">Giá</td>
											<td class="quantity">Số lượng</td>
											<td class="total">Tổng Tiền</td>
											<td class="text-center">Clear</td>
										</tr>
									</thead>
									<tbody id="bodyblock">
									</tbody>
								</table>
                                <script src="~/Scripts/jquery-2.2.1.min.js"></script>
                                <script src="~/Scripts/_cartProcess.js"></script>
						</div>
					</section> <!--/#cart_items-->

					<section id="do_action">
                        <div class="col-sm-9">
                                <div class="heading">
								<h3 style="color:#A13091; font-weight:bold;">Những gì cần làm sau cùng để quá trình mua hàng được xác nhận.!!!</h3>
								<p>Vui lòng xem hóa đơn và điền thông tin để chúng tôi chuyển hàng tới bạn....</p>
							</div>
                        </div>
                        <button class="btn btn-info btn-lg" data-toggle="modal" data-target="#FORM_MUA">Mua</button>
						<button class="btn btn-warning btn-lg" onclick="location.href='/Cart/SaveCarts'">Lưu lại</button>	
							<div class="row">

								<div class="col-sm-12">
                                    <div class="col-sm-9">
                                        <div class="total_area">
												<h2 class="text-center"><strong>Thông tin đơn hàng</strong></h2>
												<ul id="detaildata"></ul>
										        <button class="btn btn-default update"id="updatePage">Cập Nhật</button>
										</div>
                                    </div>
								</div>
                                
							</div>
					</section><!--/#do_action-->
				</div>	
				</div>
			</div>
		</section>

<div class="modal fade" id="FORM_MUA" role="dialog">
    <div class="modal-dialog">
    
      <!-- Modal content-->
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h2 class="modal-title"><span class="text-center">Thông tin khách hàng</span></h2>
        </div>
          <form style="padding-left:10px;" onsubmit="return _cartbill()" action="/Cart/PostOrder" method="post">
        <div class="modal-body">
									<div class="chose_area">
											  <div class="form-group">
												<label>Tên Bạn:</label>
												<input type="text" class="form-control" name="nameCustomer" value="@ViewBag.InforData.nameCustomer" placeholder="Tên bạn">
											  </div>
											   <div class="form-group">
												<label>Tuổi:</label>
												<input type="text" class="form-control" name="age"  value="@ViewBag.InforData.age"  placeholder="Tuổi bạn">
											  </div>
											   <div class="form-group">
													<label>Bạn là:</label>
												<div class="single_field" >
													<select name="sex" >
														<option value="true" @(ViewBag.InforData.sex==true)?"selected":"" >Nam</option>
														<option value="false"   @(ViewBag.InforData.sex==false)?"selected":"">Nữ</option>
													</select>
												</div>
											  </div>
											   <div class="form-group">
												<label>Địa chỉ:</label>
												<input type="text" class="form-control" name="adress"  value="@ViewBag.InforData.adress" placeholder="Địa chỉ">
											  </div>
											   <div class="form-group">
												<label>Số điện thoại:</label>
												<input type="text" class="form-control" name="phoneNumber" value="@ViewBag.InforData.phoneNumber" placeholder="Số điện thoại">
											  </div>
											  <div class="form-group">
												<label>Email:</label>
												<input type="email" class="form-control" name="Email" value="@ViewBag.InforData.Email" placeholder="Email">
											  </div>
                                            <div class="form-group">
												<label>Fax:</label>
												<input type="text" class="form-control" name="Fax" value="@ViewBag.InforData.Fax" placeholder="FAX">
											  </div>
									</div>
        </div>
        <div class="modal-footer">
            <button name="button" value="OK" type="button" onclick="hello()">XÁC NHẬN</button>
            <script>
                function hello() {
                    alert("CHÚC MỪNG BẠN ĐÃ ĐẶT HÀNG THÀNH CÔNG");
                }
            </script>
            <input type="button" class="btn btn-default" data-dismiss="modal" value="Quay Lại">

            
        </div>
          </form>
      </div>
    </div>
    </div>					